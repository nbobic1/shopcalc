<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.shop.shopcalc">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_moj"
        android:label="Shopcalc"
        android:roundIcon="@mipmap/ic_launcher_moj_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mlkitv1">
        <activity android:name="my.shop.shopcalc.MainActivitycalc"></activity>
        <activity android:name="my.shop.shopcalc.MainActivitylist1" />
        <activity android:name="my.shop.shopcalc.MainActivitylist" />
        <activity android:name="my.shop.shopcalc.MainActivity2" />

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name="my.shop.shopcalc.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
    </application>

</manifest>